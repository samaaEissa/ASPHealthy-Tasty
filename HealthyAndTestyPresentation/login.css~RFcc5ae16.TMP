body {
    margin: 0px;
    padding: 0px;
    background: url('imag/header.jpeg');
   
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
}
section {
    width: 100vw;
    height: 100vh;
   
    background-image: url('imag/light.jpeg');
    display: flex;
    justify-content: center;
    align-items: center;
}
.sec2 {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    
}
.sec2.container {
    text-align:left;
        padding-left: 6.5vw;
        padding-top: 6vh;
        width: 70vw;
        height: 100vh;
        
    }
 .sec2.social
 {
     padding-left:6.5vw;
     padding-top:6vh;
 }
 .sec2.container img {
        width: 3.5vw;
        height:7vh;
        padding-left:0;
    }
 
.content h2
{
    font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    padding-left:4vh;
    
}
.content input[type=text] {
    height: 30px;
    padding-left: 4vh;
    margin-left: 4vw;
    margin-right: 4vw;
    margin-top: 2.5vh;
    padding-right: 60px;
    border-radius: 20px;
}
.content input[type=submit] {
    padding-left: 4vh;
    color: white;
    margin-left: 4vw;
    margin-top: 2vh;
    padding-bottom: 10px;
    padding-top: 10px;
    padding-left: 100px;
    padding-right: 100px;
    border-radius: 6px;
    border: 1px solid;
    background-color:mediumpurple;
}
.content input[placeholder] {
    font-family: 'Times New Roman', Times, serif;
    padding-left: 1vw;
    font-size:13px;
}
