body {
    font-family: 'Mr Dafoe', cursive;
    color: #04A777;
    background: url('imag/head.jpeg');
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
}
#form1 {
    width: 550px;
    height: 550px;
    background-color: #DDF8E8;
    margin-left: auto;
    margin-right: auto;
    margin-top: 25px;
    border-radius: 20px;
    opacity: 0.8;
    align-content: center;
}
input[type=text] {
    height: 30px;
    padding-left: 4vh;
    margin-left: 10px;
    
    margin-top: 2.5vh;
    padding-right: 60px;
    border-radius: 20px;
}
input[type=password] {
    height: 35px;
    padding-left: 4vh;
    margin-top: 2.5vh;
    margin-left: 10px;
    padding-right: 60px;
    border-radius: 20px;
}
#TADescription {
    padding-left: 4vh;
    margin-top: 2.5vh;
    margin-left: 10px;
    padding-right: 60px;
    border-radius: 20px;
}
select {
    height: 40px;
    width: 250px;
    padding-left: 4vh;
    margin-top: 2.5vh;
    margin-left: 10px;
    padding-right: 60px;
    border-radius: 20px;
}
#btn_AddDiet {
    padding-left: 4vh;
    border-style: solid;
